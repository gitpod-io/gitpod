{
    "compilerOptions": {
        "rootDir": "src",
        "experimentalDecorators": true,
        "outDir": "lib",
        "lib": [
            "es6",
            "esnext.asynciterable"
        ],
        "strict": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}