{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/.bin/_mocha",
            "args": [
                "--opts",
                "${workspaceFolder}/mocha.opts",
                "--colors",
                "--timeout",
                "999999",
                "${workspaceFolder}/src/**/*.spec.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ],
    "compounds": []
}
