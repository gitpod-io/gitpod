{
    "compilerOptions": {
        "incremental": true,
        "strict": true,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2018",
        "jsx": "react",
        "lib": [
            "es6",
            "es2018",
            "dom",
            "ES2018.Regexp"
        ],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "useUnknownInCatchVariables": false,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ]
}
